<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
       xmlns:integration="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/integration
           http://www.springframework.org/schema/integration/spring-integration-1.0.xsd">
       
       <bean class="org.springframework.jdbc.datasource.DriverManagerDataSource" name="ds">
       
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
	       <property name="url" value="jdbc:mysql://localhost:3306/LoginUser"></property>
	       <property name="username" value="root"></property>
	       <property name="password" value="nishant2288"></property>
       
       </bean>
       
       <bean class="org.springframework.jdbc.core.JdbcTemplate" name="jdbctemplate" p:dataSource-ref="ds"></bean>
       
       <bean class="com.dao.UserDaoImplemented" name="userDao">
       
       		<property name="jdbctemplate" ref="jdbctemplate"></property>
       
       </bean> 
 </beans>          